<?xml version="1.0" encoding="utf-8"?>
<!--设置整体布局为directionlayout，适应页面，采用通用背景-->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="5vp"
    ohos:background_element="$graphic:background_common">
    <!--顶部显示内容为订单结算页-->
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="订单结算页"
        ohos:center_in_parent="true"
        ohos:text_size="15vp"
        ohos:text_color="#bbbbbb">
    </Text>
    <!--显示默认收货地址-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:background_index_image"
        ohos:padding="5vp"
        ohos:alignment="center">
        <!--显示默认收货地址的文字部分-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="280vp"
            ohos:orientation="vertical">
            <!--显示用户的昵称和地址-->
            <Text
                ohos:id="$+id:location_information"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text=""
                ohos:multiple_lines="true"
                ohos:top_margin="5vp"
                ohos:text_color="#999999"
                ohos:text_size="15fp">
            </Text>
        </DirectionalLayout>
        <!--点击定位按钮设置默认收货地址-->
        <Button
            ohos:id="$+id:get_location"
            ohos:height="match_content"
            ohos:width="50vp"
            ohos:left_margin="10vp"
            ohos:padding="5vp"
            ohos:text="定位"
            ohos:text_size="12fp"
            ohos:background_element="#aaaaaa"
            ohos:text_color="#ffffff">
        </Button>
    </DirectionalLayout>

    <!--选择支付方式-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="20vp"
        ohos:background_element="$graphic:background_index_image"
        ohos:top_margin="5vp">
        <RadioContainer
            ohos:id="$+id:pay_type"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <!--支付方式的选择共包括支付宝、微信、银联三种，设置组件使得只能选择其中之一-->
            <RadioButton
                ohos:height="35vp"
                ohos:width="match_content"
                ohos:text="支付宝"
                ohos:text_size="15fp"
                ohos:check_element="$graphic:checkbox_check_element">
            </RadioButton>
            <RadioButton
                ohos:height="35vp"
                ohos:left_margin="30vp"
                ohos:width="match_content"
                ohos:text_size="15fp"
                ohos:text="微信"
                ohos:check_element="$graphic:checkbox_check_element">
            </RadioButton>
            <RadioButton
                ohos:height="35vp"
                ohos:left_margin="30vp"
                ohos:width="match_content"
                ohos:text="银联"
                ohos:text_size="15fp"
                ohos:check_element="$graphic:checkbox_check_element">
            </RadioButton>
        </RadioContainer>
    </DirectionalLayout>

    <!--订单中包含的商品信息列表-->
    <TableLayout
        ohos:id="$+id:order_add_list_table"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="5vp">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="80vp"
            ohos:top_margin="5vp"
            ohos:background_element="#ffffff"
            ohos:orientation="horizontal">
            <!--商品图片的调用，此处统一采用筛选的icon1进行示例，不再进行调用-->
            <Image
                ohos:id="$+id:order_item_image"
                ohos:height="54vp"
                ohos:width="54vp"
                ohos:image_src="$media:index_icon_1"
                ohos:margin="3vp">
            </Image>
            <!--显示商品名称，功能代码中进行调用-->
            <Text
                ohos:id="$+id:order_item_product_name_text"
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:text_color="#cccccc"
                ohos:text=""
                ohos:text_size="12fp"
                ohos:multiple_lines="true"
                ohos:text_alignment="left"
                ohos:top_margin="10vp"
                ohos:padding="5vp">
            </Text>
            <!--显示商品单价，在功能代码中进行调用-->
            <Text
                ohos:id="$+id:order_item_product_price_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#cccccc"
                ohos:text=""
                ohos:text_size="10fp"
                ohos:multiple_lines="true"
                ohos:text_alignment="left"
                ohos:top_margin="10vp"
                ohos:padding="5vp">
            </Text>
            <!--显示购买数量功能-->
            <Text
                ohos:id="$+id:order_item_product_number_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#cccccc"
                ohos:text=""
                ohos:text_size="10fp"
                ohos:multiple_lines="true"
                ohos:text_alignment="left"
                ohos:top_margin="10vp"
                ohos:padding="5vp">
            </Text>
            <!--显示最后的总价部分-->
            <Text
                ohos:id="$+id:order_item_total_price_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#cccccc"
                ohos:text=""
                ohos:text_size="10fp"
                ohos:multiple_lines="true"
                ohos:text_alignment="left"
                ohos:top_margin="10vp"
                ohos:padding="5vp">
            </Text>
        </DirectionalLayout>
    </TableLayout>

    <!--订单信息显示-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="20vp"
        ohos:background_element="$graphic:background_index_image"
        ohos:top_margin="5vp"
        ohos:alignment="right"
        ohos:orientation="horizontal">
        <!--显示订单总金额的文字标识-->
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="订单总金额"
            ohos:text_size="15fp">
        </Text>
        <!--显示订单的总金额，此处以138.88元为例进行展示-->
        <Text
            ohos:id="$+id:total_price"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20fp"
            ohos:text="￥138.88"
            ohos:text_color="#ff0000">
        </Text>
    </DirectionalLayout>

    <!--订单提交按钮，设置依赖于底部-->
    <Button
        ohos:id="$+id:order_add_button"
        ohos:height="match_content"
        ohos:width="160vp"
        ohos:left_margin="100vp"
        ohos:text="提交订单"
        ohos:text_color="#ffffff"
        ohos:text_size="25vp"
        ohos:top_margin="20vp"
        ohos:padding="10vp"
        ohos:text_alignment="center"
        ohos:background_element="#ff383b"
        ohos:bottom_margin="85vp"
        ohos:align_parent_bottom="true">
    </Button>
</DirectionalLayout>
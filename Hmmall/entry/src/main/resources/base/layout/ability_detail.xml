<?xml version="1.0" encoding="utf-8"?>
<!--设置整体布局为directionlayout，适应页面，采用通用背景-->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_common">
    <!--商品详情页面的图,采用欢迎的图式-->
    <Image
        ohos:id="$+id:product_detail_image_pageslider"
        ohos:height="300vp"
        ohos:scale_mode="clip_center"
        ohos:width="match_parent"
        ohos:image_src="$media:huanying"
        ohos:background_element="#cccccc">
    </Image>
    <!--商品的各项信息显示均由功能代码调用数据库后进行实现-->
    <!--商品id的显示区-->
    <Text
        ohos:id="$+id:product_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text=""
        ohos:text_size="30fp"
        ohos:padding="5vp"
        ohos:text_alignment="left"
        ohos:left_margin="15vp"
        ></Text>
    <!--商品名称的显示区-->
    <Text
        ohos:id="$+id:product_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text=""
        ohos:padding="5vp"
        ohos:text_size="30fp"
        ohos:text_alignment="left"
        ohos:left_margin="15vp"></Text>
    <!--商品价格显示区域-->
    <Text
        ohos:id="$+id:product_detail_price"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_size="30fp"
        ohos:text_alignment="left"
        ohos:left_margin="15vp"
        ohos:text=""
        ohos:padding="5vp">
    </Text>
    <!--商品简介的显示区-->
    <Text
        ohos:id="$+id:product_detail_sku"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text=""
        ohos:text_size="20fp"
        ohos:left_margin="15vp"
        ohos:text_alignment="left"
        ohos:multiple_lines="true"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
    <!--商品的通用优惠情况显示区-->
    <Text
        ohos:id="$+id:product_detail_desc_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="该商品享有通用优惠"
        ohos:text_size="20fp"
        ohos:multiple_lines="true"
        ohos:text_alignment="left"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
    <!--选择添加购物车的数量-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="15vp">
        <!--设置文本内容为显示数量-->
        <Text
            ohos:height="35vp"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp"
            ohos:width="match_content"
            ohos:text="数量:"
            ohos:text_size="25fp"
            ohos:text_alignment="center">
        </Text>
        <!--设置左侧按钮，实施减操作-->
        <Button
            ohos:id="$+id:btn_l"
            ohos:width="50vp"
            ohos:height="50vp"
            ohos:text_size="27fp"
            ohos:background_element="$graphic:circle_button_element"
            ohos:text="-"
            ohos:left_margin="15vp"
            ohos:bottom_margin="15vp"
            ohos:right_padding="15vp"
            ohos:left_padding="15vp"
            />
        <!--中间文本内容，作为商品实际的数量显示，通过功能代码进行调用-->
        <Text
            ohos:id="$+id:num_text"
            ohos:height="35vp"
            ohos:width="40vp"
            ohos:text=""
            ohos:text_color="#007CFD"
            ohos:left_margin="10vp"
            ohos:text_size="25fp"
            ohos:text_alignment="center">
        </Text>
        <!--右侧的功能按钮，实现的操作是增加数量操作-->
        <Button
            ohos:id="$+id:btn_r"
            ohos:width="50vp"
            ohos:height="50vp"
            ohos:text_size="27fp"
            ohos:background_element="$graphic:circle_button_element"
            ohos:text="+"
            ohos:left_margin="15vp"
            ohos:bottom_margin="15vp"
            ohos:right_padding="15vp"
            ohos:left_padding="15vp"
            />
    </DirectionalLayout>

    <!--button添加购物车，采用特定的样式布局-->
    <Button
        ohos:id="$+id:add_btn"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:text="添加购物车"
        ohos:text_color="#000000"
        ohos:text_size="25vp"
        ohos:top_margin="5vp"
        ohos:left_margin="50vp"
        ohos:right_margin="50vp"
        ohos:bottom_margin="15vp"
        ohos:background_element="$graphic:capsule_button_element"
        ></Button>
</DirectionalLayout>
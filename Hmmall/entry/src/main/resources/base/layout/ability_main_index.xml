<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_common"
    ohos:padding="5vp">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">
            <!--首页搜索框设计-->
            <TextField
                ohos:id="$+id:index_search_textfield"
                ohos:height="45vp"
                ohos:width="match_parent"
                ohos:hint="商品名称"
                ohos:text_size="20fp"
                ohos:top_padding="5vp"
                ohos:left_padding="15vp"
                ohos:background_element="$graphic:background_search_input">
            </TextField>

            <!--轮播图区域-->
            <PageSlider
                ohos:id="$+id:index_image_page_slider"
                ohos:height="150vp"
                ohos:width="match_parent"
                ohos:top_margin="5vp"
                ohos:background_element="$graphic:background_index_image"
                ohos:scale_mode="center"
                ></PageSlider>

            <!--系统功能列表-->
            <TableLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="5vp"
                ohos:column_count="4"
                ohos:padding="10vp">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="83vp"
                    ohos:alignment="center">
                    <Image
                        ohos:height="40vp"
                        ohos:width="40vp"
                        ohos:image_src="$media:index_icon_1"
                        ohos:scale_mode="clip_center">
                    </Image>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="今日爆款"
                        ohos:text_size="8fp"
                        ohos:top_margin="2vp"
                        ohos:bottom_margin="5vp">
                    </Text>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="83vp"
                    ohos:alignment="center">
                    <Image
                        ohos:height="40vp"
                        ohos:width="40vp"
                        ohos:image_src="$media:index_icon_2"
                        ohos:scale_mode="clip_center">
                    </Image>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="直播间"
                        ohos:text_size="8fp"
                        ohos:top_margin="2vp"
                        ohos:bottom_margin="5vp">
                    </Text>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="83vp"
                    ohos:alignment="center">
                    <Image
                        ohos:height="40vp"
                        ohos:width="40vp"
                        ohos:image_src="$media:index_icon_3"
                        ohos:scale_mode="clip_center">
                    </Image>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="天天特卖"
                        ohos:text_size="8fp"
                        ohos:top_margin="2vp"
                        ohos:bottom_margin="5vp">
                    </Text>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="83vp"
                    ohos:alignment="center">
                    <Image
                        ohos:height="40vp"
                        ohos:width="40vp"
                        ohos:image_src="$media:index_icon_4"
                        ohos:scale_mode="clip_center">
                    </Image>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="充值中心"
                        ohos:text_size="8fp"
                        ohos:top_margin="2vp"
                        ohos:bottom_margin="5vp">
                    </Text>
                </DirectionalLayout>
            </TableLayout>

            <!--商品展示区-->
            <TableLayout
                ohos:id="$+id:index_product_list_table"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:column_count="2"
                ohos:top_margin="5vp">
                <DirectionalLayout
                    ohos:id="$+id:layout_product01"
                    ohos:height="240vp"
                    ohos:width="170vp"
                    ohos:orientation="vertical"
                    ohos:margin="2vp"
                    ohos:background_element="$graphic:background_index_image"><!--圆角5vp+白色背景-->
                    <!--显示商品的图片-->
                    <Image
                        ohos:id="$+id:product_image1"
                        ohos:height="150vp"
                        ohos:width="170fp"
                        ohos:image_src="$media:baowenbei"
                        ohos:clip_alignment="center"
                        ohos:scale_mode="center">
                    </Image>

                    <!--显示名称-->
                    <Text
                        ohos:id="$+id:product_name1"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:left_margin="10vp"
                        ohos:text_size="13fp"
                        ohos:text="保温杯">
                    </Text>

                    <!--显示商品价格-->
                    <Text
                        ohos:id="$+id:product_price1"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:text_size="13fp"
                        ohos:left_margin="10vp"
                        ohos:text="￥ 30"
                        ohos:text_color="#ff383b">
                    </Text>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:id="$+id:layout_product02"
                    ohos:height="240vp"
                    ohos:width="170vp"
                    ohos:orientation="vertical"
                    ohos:margin="2vp"
                    ohos:background_element="$graphic:background_index_image"><!--圆角5vp+白色背景-->
                    <!--显示商品的图片-->
                    <Image
                        ohos:id="$+id:product_image2"
                        ohos:height="150vp"
                        ohos:width="170fp"
                        ohos:image_src="$media:wanou"
                        ohos:clip_alignment="center"
                        ohos:scale_mode="center">
                    </Image>

                    <!--显示名称-->
                    <Text
                        ohos:id="$+id:product_name2"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:left_margin="10vp"
                        ohos:padding="2vp"
                        ohos:text_size="13fp"
                        ohos:text="玩偶">
                    </Text>

                    <!--显示商品价格-->
                    <Text
                        ohos:id="$+id:product_price2"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:text_size="13fp"
                        ohos:left_margin="10vp"
                        ohos:text="￥ 20"
                        ohos:text_color="#ff383b">
                    </Text>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:id="$+id:layout_product03"
                    ohos:height="240vp"
                    ohos:width="170vp"
                    ohos:orientation="vertical"
                    ohos:margin="2vp"
                    ohos:background_element="$graphic:background_index_image"><!--圆角5vp+白色背景-->
                    <!--显示商品的图片-->
                    <Image
                        ohos:id="$+id:product_image3"
                        ohos:height="150vp"
                        ohos:width="170fp"
                        ohos:image_src="$media:Tshirt"
                        ohos:clip_alignment="center"
                        ohos:scale_mode="center">
                    </Image>

                    <!--显示名称-->
                    <Text
                        ohos:id="$+id:product_name3"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:text_size="13fp"
                        ohos:left_margin="10vp"
                        ohos:text="T恤衫">
                    </Text>

                    <!--显示商品价格-->
                    <Text
                        ohos:id="$+id:product_price3"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:left_margin="10vp"
                        ohos:text_size="13fp"
                        ohos:text="￥ 50"
                        ohos:text_color="#ff383b">
                    </Text>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:id="$+id:layout_product04"
                    ohos:height="240vp"
                    ohos:width="170vp"
                    ohos:orientation="vertical"
                    ohos:margin="2vp"
                    ohos:background_element="$graphic:background_index_image"><!--圆角5vp+白色背景-->
                    <!--显示商品的图片-->
                    <Image
                        ohos:id="$+id:product_image4"
                        ohos:height="150vp"
                        ohos:width="170fp"
                        ohos:image_src="$media:shupian"
                        ohos:clip_alignment="center"
                        ohos:scale_mode="center">
                    </Image>

                    <!--显示名称-->
                    <Text
                        ohos:id="$+id:product_name4"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:left_margin="10vp"
                        ohos:text_size="13fp"
                        ohos:text="薯片">
                    </Text>

                    <!--显示商品价格-->
                    <Text
                        ohos:id="$+id:product_price4"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:padding="2vp"
                        ohos:text_size="13fp"
                        ohos:left_margin="10vp"
                        ohos:text="￥ 10"
                        ohos:text_color="#ff383b">
                    </Text>
                </DirectionalLayout>
            </TableLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>


<?xml version="1.0" encoding="utf-8"?>
<!--设置整体布局为directionlayout，适应页面-->
<!--本页面为商品购物车添加的样式模板-->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:top_margin="5vp"
    ohos:background_element="#ffffff"
    ohos:orientation="horizontal">
    <!--设置显示图片为默认的icon1-->
    <Image
        ohos:id="$+id:order_item_image"
        ohos:height="54vp"
        ohos:width="54vp"
        ohos:image_src="$media:index_icon_1"
        ohos:margin="3vp">
    </Image>
    <!--设置商品名称的显示-->
    <Text
        ohos:id="$+id:order_item_product_name_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="15vp"
        ohos:text_alignment="left"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
    <!--作为商品价格的显示区域，在功能代码中调用-->
    <Text
        ohos:id="$+id:order_item_product_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="15vp"
        ohos:multiple_lines="true"
        ohos:text_alignment="left"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
    <!--作为商品数量的显示区域，在功能代码中调用-->
    <Text
        ohos:id="$+id:order_item_product_number_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="15vp"
        ohos:multiple_lines="true"
        ohos:text_alignment="left"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
    <!--作为商品总价的显示区域，在功能代码中调用-->
    <Text
        ohos:id="$+id:order_item_total_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="15vp"
        ohos:multiple_lines="true"
        ohos:text_alignment="left"
        ohos:top_margin="10vp"
        ohos:padding="5vp">
    </Text>
</DirectionalLayout>
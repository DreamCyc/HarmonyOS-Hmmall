<?xml version="1.0" encoding="utf-8"?>
<!--设置整体布局为directionlayout，适应页面-->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="80vp"
    ohos:width="match_parent"
    ohos:alignment="vertical_center"
    ohos:top_margin="5vp"
    ohos:background_element="#ffffff"
    ohos:orientation="horizontal">
    <!--选择checkbox选择设置-->
    <Checkbox
        ohos:id="$+id:check_box"
        ohos:height="25vp"
        ohos:width="25vp"
        ohos:text_size="20fp"
        ohos:check_element="$graphic:checkbox_check_element"/>
    <!--放置图片为默认的icon1标识-->
    <Image
        ohos:id="$+id:shopcart_item_image"
        ohos:height="34vp"
        ohos:width="34vp"
        ohos:image_src="$media:index_icon_1"
        ohos:margin="3vp">
    </Image>
    <!--显示商品的名称文本，在功能代码中进行调用-->
    <Text
        ohos:id="$+id:shopcart_item_product_name_text"
        ohos:height="match_content"
        ohos:width="100vp"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="10fp"
        ohos:text_alignment="left"
        ohos:padding="5vp">
    </Text>
    <!--显示商品的价格信息，在功能代码中进行调用-->
    <Text
        ohos:id="$+id:shopcart_item_product_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:padding="5vp">
    </Text>
    <!--显示商品的选择数量，在功能代码中进行调用-->
    <Text
        ohos:id="$+id:shopcart_item_product_number_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:padding="5vp">
    </Text>
    <!--显示商品总价，在功能代码中进行调用-->
    <Text
        ohos:id="$+id:shopcart_item_total_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text=""
        ohos:text_size="12fp"
        ohos:multiple_lines="true"
        ohos:text_alignment="left"
        ohos:padding="5vp">
    </Text>
</DirectionalLayout>
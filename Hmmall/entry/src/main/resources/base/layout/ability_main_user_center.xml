<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="5vp"
    ohos:background_element="$graphic:background_common">
    <!--显示用户的信息：头像等-->
    <DirectionalLayout
        ohos:height="100vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="390vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_index_image"
        ohos:orientation="horizontal"
        ohos:alignment="vertical_center">
        <!--采用默认的图标作为图片样式-->
        <Image
            ohos:height="70vp"
            ohos:width="70vp"
            ohos:image_src="$media:icon"
            ohos:scale_mode="center"
            ohos:clip_alignment="center"
            ohos:left_margin="30vp">
            <!--ohos:background_element="$graphic:background_circle_shape"-->
        </Image>
        <!--设置用户名，此处暂时空缺，功能代码中进行详细设置-->
        <Text
            ohos:id="$+id:userName"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_padding="20vp"
            ohos:text=""
            ohos:text_size="20fp">
        </Text>
    </DirectionalLayout>
    <!--设置功能按钮，点击可退出登录，退回到登录页面中-->
    <Button
        ohos:id="$+id:return_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:text="退出登录"
        ohos:left_margin="25vp"
        ohos:text_size="20vp"
        ohos:padding="10vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="#ff383b">
    </Button>
</DirectionalLayout>
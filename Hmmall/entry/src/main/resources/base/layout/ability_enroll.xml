<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_common"
    ohos:padding="40vp">

    <Image
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:scale_mode="center"
        ohos:bottom_padding="20vp"
        ohos:image_src="$media:icon">
    </Image>
    <TextField
        ohos:id="$+id:enroll_name_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="注册账号"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:background_textfield">
    </TextField>

    <TextField
        ohos:id="$+id:enroll_pwd_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="注册密码"
        ohos:text_size="15fp"

        ohos:text_input_type="pattern_password"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:background_textfield">
    </TextField>

    <TextField
        ohos:id="$+id:enroll_pwd_configure"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="确认密码"
        ohos:text_size="15fp"
        ohos:text_color="#777777"

        ohos:text_input_type="pattern_password"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:background_textfield">
    </TextField>
    <Button
        ohos:id="$+id:enroll_btn"
        ohos:height="match_content"
        ohos:width="150vp"
        ohos:text="注    册"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:top_margin="15vp">
    </Button>
</DirectionalLayout>